run = "bash start.sh"
entrypoint = "server.js"
modules = ["nodejs-20"]

[nix]
channel = "stable-23_11"

[deployment]
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "NODE_ENV=production PORT=3000 node server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[agent]
expertMode = true

