run = "bash start.sh"
entrypoint = "server.js"
modules = ["nodejs-20", "web", "bash", "nix"]

[nix]
channel = "stable-25_05"

[deployment]
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "NODE_ENV=production PORT=3000 node server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

